<br>
<section class="row">
<b>Choose the required claims for DID authentication.</b>
</section>
<%= form_for @conn, Routes.did_path(@conn, :upsert_claims), fn f -> %>
  <%= text_input(f, :id, value: @id, type: "hidden") %>
  <section class="column">
    <p>Choose the required profile.</p>
    <div class="form-group">
      <%= for {claim_id, claim_descrip} <- Application.get_env(:abt_did_workshop, :profile) do %>
        <p>
          <label>
            <%= checkbox f, "profile_" <> claim_id  %>
            <span><%= claim_descrip %></span>
          </label>
        </p>
      <% end %>
    </div>

    <p>Choose the required agreements.</p>
    <div class="form-group">
      <%= for agr <- Application.get_env(:abt_did_workshop, :agreement) do %>
        <% meta = agr.meta %>
        <p>
          <label>
            <%= checkbox f, "agreement_" <> meta.id %>
            <span><%= meta.description %></span>
          </label>
        </p>
      <% end %>
    </div>
  </section>

  <%= submit "SUBMIT", class: "btn btn-primary" %>
<% end %>